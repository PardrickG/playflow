# Environment Variables Template
# Copy this file to .env.local and fill in your values

# Database (Required)
DATABASE_URL="postgresql://user:password@localhost:5432/playflow?schema=public"

# Clerk Authentication (Required)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_..."
CLERK_SECRET_KEY="sk_test_..."
CLERK_WEBHOOK_SECRET="whsec_..."

# Clerk URLs (per https://clerk.com/docs/nextjs/guides/development/custom-sign-in-or-up-page)
NEXT_PUBLIC_CLERK_SIGN_IN_URL="/sign-in"
NEXT_PUBLIC_CLERK_SIGN_UP_URL="/sign-up"
NEXT_PUBLIC_CLERK_SIGN_IN_FALLBACK_REDIRECT_URL="/dashboard"
NEXT_PUBLIC_CLERK_SIGN_UP_FALLBACK_REDIRECT_URL="/dashboard"

# Public URLs
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:3000/api"
NEXT_PUBLIC_CDN_URL="http://localhost:3000"

# Cron Jobs (Required for production)
CRON_SECRET="your-secure-cron-secret-key"

# Storage (Required for asset uploads)
R2_ACCOUNT_ID=""
R2_ACCESS_KEY_ID=""
R2_SECRET_ACCESS_KEY=""
R2_BUCKET="playflow-assets"
CDN_URL="https://cdn.playflow.io"

# Integrations (Optional)
KLAVIYO_API_KEY=""
HUBSPOT_ACCESS_TOKEN=""

# Analytics (Optional)
POSTHOG_API_KEY=""
POSTHOG_HOST="https://us.i.posthog.com"

# Feature Flags
ENABLE_BETA_FEATURES="false"
